  "bugs": {
    "url": "https://github.com/amalcaraz/panic-fab-signaling-server/issues"
  },
  "homepage": "https://github.com/amalcaraz/panic-fab-signaling-server#readme",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@types/socket.io": "^1.4.31",
    "nodemon": "^1.12.1",
    "socket.io": "^2.0.4"
  }
}
